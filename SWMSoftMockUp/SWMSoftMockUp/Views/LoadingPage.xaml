             x:Class="SWMSoftMockUp.Views.LoadingPage"
             BackgroundColor="White">
    <ContentPage.Content>
        <StackLayout
            VerticalOptions="CenterAndExpand"
            HorizontalOptions="CenterAndExpand">

            <Image Source="ic_sync_black.png"
